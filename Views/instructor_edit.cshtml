@{
  Layout="Shared/_Layout.cshtml";
}

<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li><a href="/main">Home</a></li>
        <li><a href="/tracks">Tracks</a></li>
        <li><a href="/instructors">Instructors</a></li>
        <li><a href="/schools">Schools</a></li>
        <li><a href="/account/create">Create Account</a></li>
        <li><a href="/account/login">Login</a></li>
      </ul>
    </div>
  </nav>
</div>

<div class="container">
    <h3>Update info for @Model.GetName():</h3>
    <form action="/instructor/update/@Model.GetId()" method="post">
      <div class="form-group">
        <label for="name">Name:</label>
        <input class="form-control" type="text" name="name" value="@Model.GetName()" required>
      </div>
      <div class="form-group">
        <label for="username">Desired username:</label>
        <input class="form-control" type="text" name="username" value="@Model.GetUserName()" required>
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-control" type="password" name="password" value="@Model.GetPassword()" required>
      </div>
      <div class="form-group">
        <label for="address">Address:</label>
        <input class="form-control" type="text" name="address" value="@Model.GetAddress()" required>
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input class="form-control" type="text" name="email" value="@Model.GetEmail()"required>
      </div>
      <button type="submit" class="btn btn-info">Save</button>
    </form>

    <a href="/main">Return to Home</a>
</div>
