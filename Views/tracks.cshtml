@{
  Layout="Shared/_Layout.cshtml";
}

<h3>Here are the tracks that we offer:</h3>

@foreach(var track in Model)
{
  <div class="well title">
    <h4 class="embolden">@track.GetName()</h4>
    <form action="/track/edit/@track.GetId()" method="post">
      <input type="hidden" name="track-id" value='@track.GetId()'>
      <button type="submit">Edit</button>
    </form>
    <form action="/track/delete/@track.GetId()" method="post">
      <input type="hidden" name="track-id" value='@track.GetId()'>
      <button type="submit">Delete</button>
    </form>
    <div class="well inline">
      <p>
        Courses:
      </p>
      @foreach(var course in track.GetCourses())
      {
        <span>@course.GetName()</span>
      }
    </div>
  </div>
}

<a href="/">Return to Home</a>
