@{
  Layout="Shared/_Layout.cshtml";
}

<div class="container">
  <h2>Are you sure you want to delete this Student?</h2>
  <br>
  <h3>@Model.GetLastName(), @Model.GetFirstName()</h3>
  <form action="/student/deleted/@Model.GetId()" method="post">
    <button type="submit">Yes</button>
  </form>
  <h3><a href="/main">No, return home</a></h3>
</div>
