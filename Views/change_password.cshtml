@{
  Layout="Shared/_Layout.cshtml";
}
<h3>@Model["error"]</h3>
<form action='/password/update/@Model["student"].GetId()' method="post">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <label for="current-password">Current Password:</label>
        <input class="form-control" type="password " name="last-name"  required>
      </div>
      <div class="form-group">
        <label for="new-password">New Password:</label>
        <input class="form-control" type="password " name="username"  required>
      </div>
      <button type="submit" class="btn btn-custom" aria-label="Left Align">
        <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span>
      </button>
    </div>
  </div>
</form>
