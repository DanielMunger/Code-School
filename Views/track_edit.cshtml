@{
  Layout="Shared/_Layout.cshtml";
}
<div class="container">
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <ul class="nav navbar-nav">
        <li><a href="/main">Home</a></li>
        <li><a href="/tracks">Tracks</a></li>
        <li><a href="/instructors">Instructors</a></li>
        <li><a href="/schools">Schools</a></li>
        <li><a href="/account/create">Create Account</a></li>
        <li><a href="/account/login">Login</a></li>
      </ul>
    </div>
  </nav>
</div>
<div class="container">
    <h3>Update info for @Model.GetName():</h3>
    <form action="/track/update/@Model.GetId()" method="post">
      <div class="form-group">
        <label for="course-name">First name:</label>
        <input class="form-control" type="text" name="course-name" value="@Model.GetName()" required>
      </div>
      <button type="submit" class="btn btn-info">Save</button>
    </form>
    <form action="/track/remove/@Model.GetId()" method="post">
      <input type="hidden" name="track-id" value='@Model.GetId()'>
      <button type="submit">Delete</button>
    </form>

    <a href="/main">Return to Home</a>
</div>
